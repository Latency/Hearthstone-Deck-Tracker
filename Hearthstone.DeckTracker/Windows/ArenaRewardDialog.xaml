<controls:MetroWindow x:Class="HearthStone.DeckTracker.Windows.ArenaRewardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:stats="clr-namespace:HearthStone.DeckTracker.Controls.Stats"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        lex:LocalizeDictionary.DesignCulture="en"
        lex:ResxLocalizationProvider.DefaultAssembly="HearthstoneDeckTracker"
        lex:ResxLocalizationProvider.DefaultDictionary="Strings"
        Title="{lex:Loc ArenaRewardsDialog_Title}" Height="416" Width="350" Topmost="True" WindowStyle="ToolWindow"
        SaveWindowPosition="True"
        BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="1">
    <StackPanel>
        <stats:ArenaRewards x:Name="ArenaRewards" Save="ArenaRewards_OnSave"/>
    </StackPanel>
</controls:MetroWindow>
